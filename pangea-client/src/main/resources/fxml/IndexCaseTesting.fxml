<AnchorPane id="AnchorPane" prefHeight="626.0" prefWidth="1152.0" stylesheets="@../styles/home.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itech.pangea.client.IndexCaseTestingController">
