                  <FontAwesomeIconView glyphName="TH_LIST" size="30.0" />
                  <Label text="Create Index Case Testing" textFill="#276696">
                     <font>
                        <Font name="System Bold" size="27.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="59.0" prefWidth="1282.0" spacing="20.0">
